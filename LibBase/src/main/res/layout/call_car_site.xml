<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/common_traffic_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_green_point"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/green_circle_point" />

        <EditText
            android:id="@+id/et_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:cursorVisible="false"
            android:focusable="false"
            android:gravity="center_vertical"
            android:hint="您要从哪出发"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black_333333"
            android:textColorHint="@color/gray_c7c7c7"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_17" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="38dp"
        android:background="@color/gray_d5d5d5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_orange_point"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/orange_circle_point" />

        <EditText
            android:id="@+id/et_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="您要去哪儿"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/gray_c7c7c7"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>
</LinearLayout>
