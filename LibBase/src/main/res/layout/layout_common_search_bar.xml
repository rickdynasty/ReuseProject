<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_6.0"
        android:paddingLeft="@dimen/dp_15.0"
        android:paddingRight="@dimen/dp_15.0"
        android:paddingTop="@dimen/dp_6.0">

        <com.pasc.lib.base.widget.ClearEditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_service_search"
            android:drawableLeft="@mipmap/ic_service_search_magnifier"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="left|center_vertical"
            android:hint="@string/more_service_tip"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLength="15"
            android:paddingBottom="@dimen/dp_6.0"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/dp_6.0"
            android:singleLine="true"
            android:textColor="@color/gray_333333"
            android:textColorHint="@color/gray_c7c7c7"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_8.0"
            android:text="取消"
            android:textColor="@color/blue_4d73f4"
            android:textSize="@dimen/text_size_17" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_width"
        android:background="@color/gray_e8e8e8" />
</LinearLayout>
