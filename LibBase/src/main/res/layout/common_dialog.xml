<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    app:rv_cornerRadius="3dp"
    android:layout_gravity="center"
    app:rv_backgroundColor="@color/white_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/text_size_19"
        android:textColor="@color/black_333333"
        android:gravity="center"
        android:visibility="gone"
        android:text="标题" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="left"
        android:lineSpacingMultiplier="1.2"
        android:text="提示文字提示文字提示文字"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray_d5d5d5" />

    <LinearLayout
        android:id="@+id/ll_two_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_common"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/gray_6a6a6a"
            android:textSize="@dimen/text_size_17" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_dddddd" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_common"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/blue_4d73f4"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_one_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_one_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_common"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/blue_4d73f4"
            android:textSize="@dimen/text_size_17" />


    </LinearLayout>

</com.flyco.roundview.RoundLinearLayout>