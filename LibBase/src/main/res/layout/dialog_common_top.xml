<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/rll_dialog">

    <com.flyco.roundview.RoundTextView
        android:layout_marginTop="@dimen/dp_44.0"
        android:id="@+id/tv_button1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:rv_backgroundColor="#ffffff"
        android:gravity="center"
        android:text="@string/btn_ok"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_15" />

    <View
        android:id="@+id/v_divider2"
        android:layout_width="match_parent"
        android:background="@color/gray_d5d5d5"
        android:layout_height="0.5dp" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv_button2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:rv_backgroundColor="#ffffff"
        android:gravity="center"
        android:text="@string/btn_ok"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_15" />

    <View
        android:id="@+id/v_divider3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@color/gray_d5d5d5"
        android:layout_height="0.5dp" />

    <com.flyco.roundview.RoundTextView
        android:visibility="gone"
        android:id="@+id/tv_button3"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        app:rv_backgroundColor="#ffffff"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_b2000000" />

</com.flyco.roundview.RoundLinearLayout>