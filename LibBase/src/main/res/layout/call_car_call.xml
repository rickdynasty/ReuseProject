<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_call_car"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:background="@drawable/call_car_btn_bg"
        android:text="一键召车"
        android:textColor="@color/white_ffffff"
        android:textSize="@dimen/text_size_17" />

    <Button
        android:id="@+id/btn_cancel_car"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/common_traffic_white_bg"
        android:text="取消行程"
        android:textColor="@color/gray_6a6a6a"
        android:textSize="@dimen/text_size_17"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rl_route"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/call_car_menu_bg"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_keycar_blue_road" />

        <TextView
            android:id="@+id/tv_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/iv_edit_route"
            android:layout_toRightOf="@+id/iv_road"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/gray_6a6a6a"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:id="@+id/iv_edit_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_keycar_edit" />

    </RelativeLayout>

</LinearLayout>
