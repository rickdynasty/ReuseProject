<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/mainpage_title_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/dp_30.0"
        android:text="江海明珠 大美南通"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_17" />


    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15.0"
        android:layout_marginTop="@dimen/dp_26.0"
        android:text="25"
        android:layout_marginBottom="@dimen/dp_10.0"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_20" />

    <TextView
        android:id="@+id/tv_temp_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_3.0"
        android:layout_marginTop="@dimen/dp_30.0"
        android:layout_toRightOf="@+id/tv_temperature"
        android:text="℃"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_10" />


    <TextView
        android:id="@+id/tv_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6.0"
        android:layout_marginTop="@dimen/dp_29.0"
        android:layout_toRightOf="@+id/tv_temp_sign"
        android:text="优"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_10" />

    <TextView
        android:id="@+id/tv_du"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_quality"
        android:layout_marginLeft="@dimen/dp_6.0"
        android:layout_toRightOf="@+id/tv_temp_sign"
        android:text="多云"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_10" />
</RelativeLayout>
